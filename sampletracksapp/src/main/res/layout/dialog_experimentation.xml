<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Experiments" />

    <EditText
        android:id="@+id/platform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Platform to query"
        android:importantForAutofill="no"
        android:inputType="text" />

    <EditText
        android:id="@+id/experiments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Experiment names (seperated by coma)"
        android:importantForAutofill="no"
        android:inputType="text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/anonId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Anon ID"
            android:importantForAutofill="no"
            android:inputType="text" />

        <Button
            android:id="@+id/generateAnonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/setup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Setup"
            android:textSize="11sp"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/fetch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:text="Fetch"
            android:textSize="11sp"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/getCache"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:text="Get cache"
            android:textSize="11sp"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/clearCache"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:text="Clear cache"
            android:textSize="11sp"
            tools:ignore="ButtonStyle" />

    </LinearLayout>

</LinearLayout>
